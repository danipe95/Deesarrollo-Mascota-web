@page
@model Mascoticas.App.Frontend.Pages.FLisPropietariosModel
@{
}
<h2>
    LISTADO DE PROPIETARIOS
</h2>
<table class= "table">

    <thead>
            <tr>
                <th>Id</th>
                <th>Nombres </th>
                <th>Apellidos</th>
                <th>Detalle</th>
                <th>Editar</th>
                
            </tr>
    </thead>

                @foreach (var Propietario in Model.Propietarios)
                {
                    <tr>
                        <td>@Propietario.idPersona</td>
                        <td>@Propietario.Nombres</td>
                        <td>@Propietario.Apellidos</td>
                    <td>
                <a class="btn btn-primary table-btn" asp-page="./DetailsPropietarios" asp-route-PropietarioId="@Propietario.Id">
                    <i class="fas fa-info-circle fa-lg"></i </a>
                </td>

                <td>
                <a class="btn btn-primary table-btn" asp-page="./EditPropietarios" asp-route-PropietarioId="@Propietario.Id">
                    <i class="fas fa-info-circle fa-lg"></i </a>
                </td>

                    </tr>
                
                    
                } 

            </table>
            <a asp-page=".\EditPropietarios" class="btn btn-primary">Adicionar Propietario</a>